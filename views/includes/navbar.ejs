<script>
  // Responsive search bar placeholder
  function updateSearchBarResponsive() {
    const width = window.innerWidth;
    const input = document.getElementById('mainSearchInput');
    const btnText = document.querySelector('.search-btn-text');
    if (width < 768) {
      if (input) input.placeholder = 'Search';
      if (btnText) btnText.style.display = 'none';
    } else {
      if (input) input.placeholder = 'Search destination';
      if (btnText) btnText.style.display = 'inline';
    }
  }
  window.addEventListener('resize', updateSearchBarResponsive);
  window.addEventListener('DOMContentLoaded', updateSearchBarResponsive);

  // Show/hide mobile nav and search bar
  function handleMobileNav() {
    const width = window.innerWidth;
    const mobileNav = document.querySelector('.mobile-bottom-nav');
    const mobileSearch = document.querySelector('.mobile-top-search');
    if (width <= 991.98) {
      if (mobileNav) mobileNav.style.display = 'flex';
      if (mobileSearch) mobileSearch.style.display = 'flex';
    } else {
      if (mobileNav) mobileNav.style.display = 'none';
      if (mobileSearch) mobileSearch.style.display = 'none';
    }
  }
  window.addEventListener('resize', handleMobileNav);
  window.addEventListener('DOMContentLoaded', handleMobileNav);

  // Sticky top search bar hides on scroll down
  let lastScrollTop = 0;
  window.addEventListener('scroll', function() {
    const mobileSearch = document.querySelector('.mobile-top-search');
    if (!mobileSearch || window.innerWidth > 991.98) return;
    let st = window.pageYOffset || document.documentElement.scrollTop;
    if (st > 40) {
      mobileSearch.style.top = '-60px';
    } else {
      mobileSearch.style.top = '0';
    }
    lastScrollTop = st <= 0 ? 0 : st;
  }, false);

  // Profile dropdown toggle
  function toggleProfileDropdown(e) {
    e.preventDefault();
    const dropdown = document.getElementById('profileDropdown');
    dropdown.classList.toggle('open');
  }
  // Close profile dropdown if clicked outside
  document.addEventListener('click', function(event) {
    const dropdown = document.getElementById('profileDropdown');
    if (!dropdown) return;
    if (!dropdown.contains(event.target)) {
      dropdown.classList.remove('open');
    }
  });

  // Modern search bar enhancements
  function updateClearBtnVisibility() {
    const input = document.getElementById('mainSearchInput');
    const clearBtn = document.getElementById('clearSearchBtn');
    if (input && clearBtn) {
      clearBtn.style.display = input.value.length > 0 ? 'flex' : 'none';
    }
  }
  const mainSearchInput = document.getElementById('mainSearchInput');
  const clearSearchBtn = document.getElementById('clearSearchBtn');
  if (mainSearchInput && clearSearchBtn) {
    mainSearchInput.addEventListener('input', updateClearBtnVisibility);
    clearSearchBtn.addEventListener('click', function() {
      mainSearchInput.value = '';
      updateClearBtnVisibility();
      mainSearchInput.focus();
    });
    clearSearchBtn.addEventListener('keydown', function(e) {
      if (e.key === 'Enter' || e.key === ' ') {
        mainSearchInput.value = '';
        updateClearBtnVisibility();
        mainSearchInput.focus();
      }
    });
    updateClearBtnVisibility();
  }
  // Animate search icon on focus/blur
  const searchIconWrapper = document.querySelector('.search-icon-wrapper');
  if (mainSearchInput && searchIconWrapper) {
    mainSearchInput.addEventListener('focus', function() {
      searchIconWrapper.classList.add('animated');
    });
    mainSearchInput.addEventListener('blur', function() {
      searchIconWrapper.classList.remove('animated');
    });
  }
</script>

