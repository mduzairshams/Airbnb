<% layout("/layouts/boilerplate") %>
<style>
  .right-sidebar-book {
    position: absolute;
    top: 6.5rem;
    right: 3rem;
    width: 320px;
    background: #fff;
    border: 1.5px solid #e0e0e0;
    border-radius: 18px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.08);
    z-index: 10;
    padding: 2rem 1.2rem 1.5rem 1.2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .main-content-center {
    max-width: 600px;
    margin: 0 auto;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }
  .right-sidebar-book p {
    font-size: 1.1rem;
    font-weight: 500;
    margin-bottom: 0.7rem;
    text-align: center;
    color: #222;
  }
  .right-sidebar-book .book-btn {
    width: 100%;
    background: #FF5A5F;
    color: #fff;
    border: none;
    border-radius: 18px;
    font-size: 1.1rem;
    font-weight: 600;
    padding: 0.8rem 0;
    margin-bottom: 0.7rem;
    box-shadow: 0 4px 24px rgba(255,90,95,0.18);
    transition: background 0.2s, color 0.2s, transform 0.18s;
    cursor: pointer;
  }
  .right-sidebar-book .book-btn:hover {
    background: #f43a40;
    color: #fff;
    transform: scale(1.04);
  }
  .book-now-btn {
    background: linear-gradient(90deg, #FF5A5F 0%, #f43a40 100%);
    color: #fff;
    font-weight: 700;
    font-size: 1.15rem;
    letter-spacing: 1px;
    border: none;
    border-radius: 2rem;
    box-shadow: 0 4px 18px rgba(255,90,95,0.18), 0 1.5px 8px rgba(0,0,0,0.04);
    transition: transform 0.18s, box-shadow 0.18s, background 0.18s;
    padding: 0.75rem 0;
    outline: none;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    width: 100%;
    margin-bottom: 1rem;
  }
  .book-now-btn::after {
    content: "â†’";
    margin-left: 0.7em;
    font-size: 1.2em;
    transition: margin-left 0.18s;
  }
  .book-now-btn:hover, .book-now-btn:focus {
    background: linear-gradient(90deg, #f43a40 0%, #FF5A5F 100%);
    color: #fff;
    transform: scale(1.06) translateY(-2px);
    box-shadow: 0 8px 32px rgba(255,90,95,0.28);
  }
  .book-now-btn:hover::after {
    margin-left: 1.2em;
  }
  .countdown-timer {
    font-size: 1rem;
    color: #000;
    font-weight: 600;
    margin-top: 0.5rem;
    padding-left: 10px;
    text-align: left;
  }
  @media (max-width: 991.98px) {
    .right-sidebar-book {
      position: static;
      width: 100%;
      margin: 1.5rem 0 0 0;
      border-radius: 14px;
      box-shadow: 0 1px 6px rgba(0,0,0,0.06);
      right: unset;
      top: unset;
    }
    .main-content-center {
      max-width: 100%;
      padding: 1rem 0;
    }
  }
  .show-img {
    width: 100%;
    height: auto;
    max-width: 350px;
    max-height: 250px;
    object-fit: cover;
    border-radius: 12px;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  #map {
    width: 100%;
    min-height: 250px;
    height: 350px;
    border-radius: 12px;
  }
  @media (max-width: 991.98px) {
    .show-img {
      max-width: 100%;
      max-height: 220px;
    }
    #map {
      min-height: 180px;
      height: 220px;
    }
  }
  @media (max-width: 575.98px) {
    .show-img {
      max-width: 100%;
      max-height: 160px;
    }
    #map {
      min-height: 120px;
      height: 160px;
    }
  }
</style>
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="main-content-center col-12 col-lg-8">
      <h3 class="mb-3 mt-3 text-center"><%=listing.title %></h3>
      <div class="card w-100 mb-3">
        <img src="<%= listing.image.url %>" class="card-img-top show-img mb-3" alt="Listing_image">
        <div class="card-body">
          <% if (listing.owner && listing.owner.username) { %>
          <p class="card-text">Owned by <i><%= listing.owner.username %></i></p>
          <% } else { %>
          <p class="card-text">Owned by <i>Unknown</i></p>
          <% } %>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
          <p class="card-text"><%= listing.location %></p>
          <p class="card-text"><%= listing.country %></p>
          <button class="book-now-btn">Book Now</button>
        </div>
      </div>
      <%if(currUser && listing.owner && listing.owner._id && listing.owner._id.equals(currUser._id)){%>
        <div class="row g-2 mb-3">
          <div class="col-12 col-md-6">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark add-btn w-100">Edit my place</a>
          </div>
          <div class="col-12 col-md-6">
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
              <button class="btn btn-dark w-100">Delete my place</button>
            </form>
          </div>
        </div>
      <% } %>
      <div>
        <hr>
        <form method="POST" class="needs-validation" novalidate action="/listings/<%= listing._id%>/reviews">
          <% if(currUser){ %>
          <h4 class="mb-3">Experience Showcase</h4>
          <div class="card-body mb-3 mt-3">
            <label for="rating" class="card-text">Rating</label>
            <fieldset class="starability-basic">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
              <input type="radio" id="second-rate1" name="review[rating]" value="1" />
              <label for="second-rate1" title="Terrible">1 star</label>
              <input type="radio" id="second-rate2" name="review[rating]" value="2" />
              <label for="second-rate2" title="Not good">2 stars</label>
              <input type="radio" id="second-rate3" name="review[rating]" value="3" />
              <label for="second-rate3" title="Average">3 stars</label>
              <input type="radio" id="second-rate4" name="review[rating]" value="4" />
              <label for="second-rate4" title="Very good">4 stars</label>
              <input type="radio" id="second-rate5" name="review[rating]" value="5" />
              <label for="second-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label mb-3">Comment</label>
            <textarea required name="review[comment]" id="comment" placeholder="Write a comment by sharing your experience" class="form-control" cols="25" rows="4"></textarea>
            <div class="invalid-feedback">Please write a review</div>
            <div class="valid-feedback">Thanks for review</div>
          </div>
          <button class="mb-4 btn btn-dark add-btn col-12 col-md-4 mb-3">Submit</button>
        </form>
        <hr>
        <% } %>
        <% if(listing.reviews.length >= 1){ %>
        <div class="row">
          <h4>Our Reviews</h4>
          <%for(review of listing.reviews){%>
          <div class="card review-card col-12 mb-2">
            <div class="card-body">
              <h5 class="card-title"><%= review.author.username %></h5>
              <p class="card-text"><%= review.comment %></p>
              <p class="starability-result" data-rating="<%= review.rating %>">Rated: <%= review.rating %></p>
            </div>
            <% if(currUser && listing.owner && listing.owner._id && currUser._id.equals(listing.owner._id)) { %>
            <form method="POST" class="mb-2 mt-2" action="/listings/<%=listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-dark">Delete</button>
            </form>
            <% } %>
          </div>
          <%}%>
        </div>
        <%}%>
      </div>
      <div class="mb-3 mt-3">
        <h3>Where you'll be</h3>
        <div id="map" class="mb-3 mt-3"></div>
      </div>
    </div>
    <div class="col-lg-4 col-md-4 col-12">
      <div class="right-sidebar-book">
        <p>Get 10% off on your first booking</p>
        <% if(currUser) { %>
          <form method="POST" action="/listings/<%= listing._id %>/book" style="width:100%;">
            <button type="submit" class="book-btn">Book Now !</button>
          </form>
        <% } else { %>
          <a href="/signup" class="book-btn">Book Now !</a>
        <% } %>
        <div class="countdown-timer" id="countdown-timer">3:00:00 left</div>
      </div>
    </div>
  </div>
</div>
<script>
  // Countdown timer for 3 hours
  const timerElement = document.getElementById('countdown-timer');
  let timeLeft = 3 * 60 * 60; // 3 hours in seconds
  function updateTimer() {
    const hours = Math.floor(timeLeft / 3600);
    const minutes = Math.floor((timeLeft % 3600) / 60);
    const seconds = timeLeft % 60;
    timerElement.textContent = `${hours}:${minutes.toString().padStart(2,'0')}:${seconds.toString().padStart(2,'0')} left`;
    if (timeLeft > 0) {
      timeLeft--;
    }
  }
  updateTimer();
  setInterval(updateTimer, 1000);
</script>
